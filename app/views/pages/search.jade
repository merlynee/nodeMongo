extends ../layout

block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3 #{keyWord}
                .panel-body
                    if movies && movies.length > 0
                        each item in movies
                            .col-md-2
                                .thumbnail
                                    a(href="/movie/detail/#{item._id}")
                                    if item.poster.indexOf('http') > -1
                                        img(src="#{item.poster}",alt="#{item.title}")
                                    else
                                        img(src="/upload/#{item.poster}",alt="#{item.title}")
                                    .caption
                                        h3 #{item.title}
                                        p: a.btn.btn-primary(href="/movie/detail/#{item._id}",role="button") 观看预告
            ul.pagination
                - for(var i=0 ;i< totalPage ; i++){
                    - if( currentPage == i){
                        li.active
                            span 第 #{i+1} 页
                    - }else{
                        li
                            a(href='/category/showmovie?#{query}&p=#{i}') 第#{i+1}页
                    - }
                - }