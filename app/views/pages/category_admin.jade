extends ../layout

block content
    .container
        .row
            form.form.-horizontal(method="post",name="category",action="/category/new")
                input.form-control(type="hidden" ,name="category[_id]" ,value=category._id)
                .form-group
                    label.col-sm-3.control-label(for="inputCategory") 类别
                    .col-sm-10
                        input#inputCategory.form-control(type="text",name="category[name]" ,value=category.name)
                .form-group
                    .col-sm-10
                        input.form-control(type="submit")

